<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookstoreapplication.OwnerBookScreenController">
   <children>
     
    <TableView fx:id="ownerBookTable" layoutX="20" layoutY="20" prefHeight="475" prefWidth="1160">
        <columns>
            <TableColumn fx:id="bookName" prefWidth="500.0" text="Book Name" />
                 
            <TableColumn fx:id="bookPriceVal" prefWidth="500.0" text="Book Price" />
            <TableColumn fx:id="checkBoxColumn" prefWidth="200" text="Select" />
                 
        </columns>
    </TableView>
      <Button layoutX="375.0" layoutY="550.0" mnemonicParsing="false" onAction="#handleAdd" prefHeight="50" prefWidth="168" text="Add" />
      <Button layoutX="100" layoutY="700" mnemonicParsing="false" onAction="#handleDelete" prefHeight="50" prefWidth="168" text="Delete" />
      <Button layoutX="950" layoutY="700" mnemonicParsing="false" onAction="#handleBack" prefHeight="50" prefWidth="168" text="Back" />



      <TextField fx:id="bookNameField" layoutX="100" layoutY="550" prefHeight="25.0" prefWidth="240.0" />
      <TextField fx:id="bookPriceField" layoutX="100" layoutY="600" prefHeight="25.0" prefWidth="240.0" />
      <Label fx:id="bookNameLabel" layoutX="10" layoutY="550" prefHeight="25.0" prefWidth="77.0" text="Book Name:" />
            <Label fx:id="bookPriceLabel" layoutX="10" layoutY="600" prefHeight="25.0" prefWidth="77.0" text="Book Price:" />

   </children>
</AnchorPane>
